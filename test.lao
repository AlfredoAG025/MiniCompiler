}

#caso 6 if anidado
int a = 10;
if (a > 0){
    if (a % 2 == 0){
        print "a es un número par positivo";
    } else {
        print "a es un número impar positivo";
    }
} else {
    print "a no es un número positivo";
}

#caso 7 while con operadores logicos y arimeticos
int a = 1;
while (a < 100 && (a * a) < 1000){
    print "Cuadrado de a menos de 1000";
    a++;
}

